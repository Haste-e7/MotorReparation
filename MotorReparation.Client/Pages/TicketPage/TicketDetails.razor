<h3>DisplayTicket</h3>

    <div class="col-md-3 mb-2">
        <a href="#">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        @Ticket.Title
                    </h5>
                    <p class="card-text">
                        <b>@Ticket.Description</b>
                    </p>
                </div>
            </div>
        </a>
    </div>

@code {
    [Parameter]
    public Ticket Ticket { get; set; }
}
